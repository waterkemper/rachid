---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Rachid — Divisão simples de despesas em grupo",
  description = "Racha contas sem dor de cabeça. Crie eventos, adicione participantes, lance despesas e veja quem paga quem. Cálculo automático, grupos e famílias, consumo por padrão.",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImageURL = new URL("/og-image.png", Astro.site);
---

<!doctype html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/logo.png" />
    
    <!-- SEO Básico -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL.toString()} />
    <meta name="robots" content="index,follow" />
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalURL.toString()} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={ogImageURL.toString()} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content="pt_BR" />
    <meta property="og:site_name" content="Rachid" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageURL.toString()} />
    
    <!-- Preconnect para performance -->
    <link rel="preconnect" href="https://app.orachid.com.br" />
    
    <!-- Structured Data (JSON-LD) -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "WebApplication",
      "name": "Rachid",
      "description": "Divisão simples de despesas em grupo. Racha contas sem dor de cabeça.",
      "url": "https://orachid.com.br",
      "applicationCategory": "FinanceApplication",
      "operatingSystem": "Web",
      "offers": {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "BRL"
      },
      "aggregateRating": {
        "@type": "AggregateRating",
        "ratingValue": "5",
        "ratingCount": "1"
      }
    })} />
    
    <!-- CSS crítico inline -->
    <style is:global>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      :root {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        line-height: 1.5;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }
      
      body {
        background: linear-gradient(135deg, #0b1220 0%, #111b33 35%, #0b1220 100%);
        color: rgba(255, 255, 255, 0.98);
        min-height: 100vh;
      }
      
      img {
        max-width: 100%;
        height: auto;
        display: block;
      }
    </style>
  </head>
  <body>
    <slot />
  </body>
</html>

